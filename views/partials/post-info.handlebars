
<div class="bg-white rounded-lg border shadow-md dark:bg-gray-800 dark:border-gray-700 post-outline" >
               <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{title}}</h5>
                <p class="font-normal text-gray-700 dark:text-gray-400">{{contents}}</p>
                <p class="font-normal text-gray-700 dark:text-gray-400">{{date_created}}</p>
                <p class="font-normal text-gray-700 dark:text-gray-400">By: {{user.dataValues.user_name}}</p>
                <br>
                <br>
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Comments</h5>
                {{#each comments}}
                    <p class="font-normal text-gray-700 dark:text-gray-400">{{dataValues.content}}</p> 
                    <p class="font-normal text-gray-700 dark:text-gray-400">By: {{dataValues.user.dataValues.user_name}}</p> 
                {{/each}}
    
</div>
